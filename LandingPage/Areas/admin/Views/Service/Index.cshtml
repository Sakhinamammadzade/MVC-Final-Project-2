@model List<Service>
<a class="btn btn-warning mb-3" href="/admin/Service/Create">Create</a>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
     <table class="table table-dark table-hover table-striped table-border border-danger  caption-top ">
                    <thead>
                        <tr >
                            <th class="text-warning" scope="col">#</th>
                            <th class="text-danger"  scope="col">Title</th>
                            <th class="text-success"  scope="col">Icon</th>
                            <th class="text-primary"  scope="col">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                            <th scope="col">@item.Id</th>
                            <td>@item.Title</td>
                            <td>@item.Icon</td>
                            <td>@item.Description</td>
                            
                          
                            <td>
                                <a class="btn btn-outline-danger btn-sm" href="/admin/service/delete/@item.Id">Delete</a>
                                <a class="btn btn-outline-primary btn-sm" href="/admin/service/edit/@item.Id">Edit</a>
                                <a class="btn btn-outline-warning btn-sm" href="/admin/service/detail/@item.Id">detail</a>
                            </td>
                        </tr> 
                        }
                       


                    </tbody>
                    <tfoot>
                        <tr>
                            <td style="color:darkBlue" colspan="3">This Table for Service</td>
                        </tr>
                    </tfoot>

                </table>

                </div>
           

            </div>
        </div>
    </div>



