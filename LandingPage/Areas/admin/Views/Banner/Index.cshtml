@model Banner
@if (Model == null)
{
    <a class="btn btn-success mb-2" href="/admin/banner/Create">Create</a>
}

@if (Model != null)
{
    <div class="container">
        <div class="row">
            <div class="col-12">

                <table class="table table-dark table-hover table-striped table-border border-danger  caption-top ">
                    <thead>
                        <tr>
                            <th class="text-warning" scope="col">#</th>
                            <th class="text-danger"  scope="col">Title</th>
                            <th class="text-primary" scope="col">Photo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="col">@Model.Id</th>
                            <td>@Model.Title</td>
                            <td >
                                <img class="img-fluid" width="300" src="~/@Model.PhotoUrl" />
                            </td>
                            <td>
                                <a class="btn btn-outline-danger btn-group-sm" href="/admin/banner/delete/@Model.Id">Delete</a>
                                <a class="btn btn-outline-primary btn-group-sm" href="/admin/banner/edit/@Model.Id">Edit</a>
                                <a class="btn btn-outline-warning btn-group-sm" href="/admin/banner/detail/@Model.Id">detail</a>
                            </td>
                        </tr>


                    </tbody>
                    <tfoot>
                        <tr>
                            <td style="color:darkred" colspan="3">This Table for Banner</td>
                        </tr>
                    </tfoot>

                </table>

            </div>
        </div>
    </div>

}

else
{
    <div class="alert alert-danger"><strong>There is no Information in Database</strong></div>
}