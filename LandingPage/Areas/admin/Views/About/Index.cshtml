@model List<About>

    <a class="btn btn-success mb-2" href="/admin/about/Create">Create</a>

   @if(Model!=null){
           <div class="container">
        <div class="row">
         
               <div class="table-responsive">

                <table class="table table-dark table-hover table-striped table-border border-danger  caption-top ">
                    <thead>
                        <tr>
                            <th class="text-warning" scope="col">#</th>
                            <th class="text-danger"  scope="col">Title</th>
                            <th class="text-danger"  scope="col">Description</th>
                            <th class="text-primary" scope="col">Photo</th>
                        </tr>
                    </thead>
                    <tbody>
                     @foreach (var about in Model)
                     {
                            <tr>
                            <th scope="col">@about.Id</th>
                            <td>@about.Title</td>
                            <td>@about.Description</td>
                            <td >
                                <img class="img-fluid" width="300" src="~/@about.PhotoUrl" />
                            </td>
                            <td>
                                <a class="btn btn-outline-danger btn-sm" href="/admin/about/delete/@about.Id">Delete</a>
                                <a class="btn btn-outline-primary btn-sm" href="/admin/about/edit/@about.Id">Edit</a>
                                <a class="btn btn-outline-warning btn-sm" href="/admin/about/detail/@about.Id">detail</a>
                            </td>
                        </tr>
                         
                     }


                    </tbody>
                    <tfoot>
                        <tr>
                            <td style="color:darkred" colspan="3">This Table for About Section</td>
                        </tr>
                    </tfoot>

                </table>

            </div>
            </div>
         
        </div>
  

    }

 else
{
    <div class="alert alert-danger"><strong>There is no information in Database</strong></div>
}

 

