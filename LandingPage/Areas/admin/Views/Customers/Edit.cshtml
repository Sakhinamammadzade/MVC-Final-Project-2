@model Customer

<form method="post" enctype="multipart/form-data">
    <div class="container">
      <div class="row">
            <div class="input-group my-2">
                <input value="@Model.Name" name="Name" id="name" class="form-control" type="text" placeholder="Name" />
            </div>
             
            <div class="input-group my-2">
                <input value="@Model.FeedBack" name="FeedBack" id="feedback" class="form-control" type="text" placeholder="FeedBack" />
           
           <div class="input-group my-2">
                    @ViewBag.PhotoError
                <input  name="myPhoto" id="photo" class="form-control" type="file" placeholder="photo" />
                <br/>
                <input type="hidden" name="oldPhoto" value="@Model.CustomerPhoto"/>
                
               <div class="input-group my-2">
                <div class="card">
                      <div class="card-body">
                   <br/>
                        <img  height="200" src="~/@Model.CustomerPhoto"/>
                    </div>
                </div>
            </div>
         </div>
         <input type="submit" class="btn btn-outline-warning" value="Edit"/>
        </div>
   
    </div>
     </div>
</form>